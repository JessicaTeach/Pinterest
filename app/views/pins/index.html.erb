<h1>Listing pins</h1>

<div id="columns">
<% @pins.each do |pin| %>
  <div class="item-background">
        <div class="pin-image">
        <%= image_tag(pin.image, width: '100%') %></td>
      </div>
      <div class="item-info">
        <h3><%= pin.name %></td></h3>
       <h4><%= pin.user.full_name %></td></h4>
        <h4><%= pin.board_id %></td><h4>
      </div>
      <div class="item-links">
        <%= link_to 'Show', pin %></td>
        <%= link_to 'Edit', edit_pin_path(pin) %></td>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </div>
    <% end %>
  </div>

<br>

<%= link_to 'New Pin', new_pin_path %>

















